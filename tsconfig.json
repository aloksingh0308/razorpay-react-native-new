{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
